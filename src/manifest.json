{
  "name": "ext: Headline Hub Checker",
  "version": "0.0.3",
  "manifest_version": 3,
  "description": "Tools for adding articles to headlinehub.org",
  "homepage_url": "http://headlinehub.org",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png"
  },
  "action": {
    "default_title": "HeadlineHub Check",
    "default_icon": "icons/favicon-32x32.png",
    "default_popup": "/popup/popup.html"
  },

  "default_locale": "en",
  "background": {
    "service_worker": "service-worker.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage",
    "identity",
    "identity.email",
    "contextMenus",
    "activeTab",
    "tabs",
    "background"
  ],
  "host_permissions": [
    "http://www.blogger.com/",
    "*://*/*"
  ],

  "content_scripts": [
    {
      "all_frames": true,
      "matches": [ "<all_urls>"],
      "css": [
        "inject/inject.css"
      ]
    },
    {
      "matches": [ "<all_urls>"],
      "js": [
        "inject/inject.js"
      ],
      "exclude_matches": [
        "*://*.google.com/*",
        "*://*.hub.wip/*",
        "*://*.tobacco.org/*",
        "*://*.amazon.com/*",
        "*://*.facebook.com/*",
        "*://*.youtube.com/*",
        "*://*.wip/*",
        "*://jardinoado.herokuapp.com/",
        "*://*.stackoverflow.com/*",
        "*://*.stackexchange.com/*",
        "*://*.symfony.com/*",
        "*://*.netflix.com/*",
        "*://*.twitter.com/*",
        "*://*.php.net/*",
        "*://*.intuit.com/*",
        "*://*.github.com/*",
        "*://127.0.0.1/*"
      ]
    }
  ]
}
