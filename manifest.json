{
  "name": "ext: Headline Hub Checker",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Tools for adding articles to headlinehub.org",
  "homepage_url": "http://headlinehub.org",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Action!",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "identity",
    "identity.email",
    "contextMenus",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [ "<all_urls>"],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [ "<all_urls>"],
      "js": [
        "src/inject/inject.js"
      ],
      "exclude_matches": [
        "*://*.wip/*",
        "*://*.google.com/*",
        "*://*.tobacco.org/*",
        "*://*.amazon.com/*",
        "*://*.facebook.com/*",
        "*://*.stackoverflow.com/*",
        "*://*.stackexchange.com/*",
        "*://*.symfony.com/*",
        "*://*.netflix.com/*",
        "*://*.twitter.com/*"
      ]
    }
  ]
}
