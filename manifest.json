{
  "name": "ext: Headline Hub Checker",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Tools for adding articles to headlinehub.org",
  "homepage_url": "http://headlinehub.org",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png"
  },
  "browser_action": {
    "default_title": "HeadlineHub Check",
    "default_icon": "icons/favicon-32x32.png",
    "default_popup": "src/popup.html"
  },

  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options.html",
  "permissions": [
    "storage",
    "identity",
    "identity.email",
    "contextMenus",
    "activeTab",
    "tabs",
    "background"
  ],
  "content_scripts": [
    {
      "matches": [ "<all_urls>"],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [ "<all_urls>"],
      "js": [
        "src/inject/inject.js"
      ],
      "exclude_matches": [
        "*://*.google.com/*",
        "*://*.hub.wip/*",
        "*://*.tobacco.org/*",
        "*://*.amazon.com/*",
        "*://*.facebook.com/*",
        "*://*.youtube.com/*",
        "*://*.stackoverflow.com/*",
        "*://*.stackexchange.com/*",
        "*://*.symfony.com/*",
        "*://*.netflix.com/*",
        "*://*.twitter.com/*",
        "*://*.php.net/*",
        "*://*.intuit.com/*",
        "*://*.github.com/*",
        "*://127.0.0.1/*"
      ]
    }
  ]
}
